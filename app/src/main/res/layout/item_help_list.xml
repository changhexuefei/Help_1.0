<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/help_list_headportraid"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/aa"/>
    <TextView
        android:id="@+id/tv_help_list_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看风景的人"
        android:layout_toRightOf="@id/help_list_headportraid"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_help_list_objectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兴隆小区"
        android:layout_toRightOf="@id/help_list_headportraid"
        android:layout_below="@id/tv_help_list_nickname"
        android:layout_marginTop="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/im_phone_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/phone_on"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_18"/>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_help_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:text="求救中"
        android:layout_toLeftOf="@id/im_phone_call"/>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_help_list_phoneno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="53626344"
        android:layout_toLeftOf="@id/im_phone_call"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@id/tv_help_list_content"/>
    <View
        android:layout_height="@dimen/dp_1"
        android:layout_width="match_parent"
        android:background="#dbdbdb"
        android:layout_below="@id/help_list_headportraid">

    </View>
</RelativeLayout>
