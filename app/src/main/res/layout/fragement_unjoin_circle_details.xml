<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

	<ImageView
		android:id="@+id/im_unjoin_circle_cover"
		android:layout_width="match_parent"
		android:layout_height="160dp"
		android:background="@mipmap/aa"/>

	<TextView
		android:id="@+id/tv_unjion_circle_num"
		android:layout_width="50dp"
		android:layout_height="25dp"
		android:layout_alignParentRight="true"
		android:alpha="0.42"
		android:background="#000000"
		android:gravity="center"
		android:text="1342人"
		android:textColor="#FFFFFF"
		android:textSize="12sp"
		/>

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/im_unjoin_circle_headportraid"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="135dp"
		android:src="@mipmap/cc"/>

	<ImageView
		android:id="@+id/im_unjoin_circle_gender"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/im_unjoin_circle_headportraid"
		android:layout_toRightOf="@id/im_unjoin_circle_headportraid"
		android:src="@mipmap/female"/>

	<TextView
		android:id="@+id/tv_unjion_circle_nikename"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/im_unjoin_circle_headportraid"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="风华秋月的事"
		android:textColor="#323232"
		android:textSize="14sp"/>

	<TextView
		android:id="@+id/tv_unjoin_circle_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_unjion_circle_nikename"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:background="@drawable/circle_details_rank"
		android:text="圈主"
		android:textColor="#FFFFFF"
		android:textSize="10sp"/>

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_unjoin_circle_status"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_unjoin_circle_tag1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dp_2"
			android:background="@drawable/stroll_type_three"
			android:gravity="center"
			android:text="健身"
			android:textColor="#FFFFFF"
			android:textSize="10sp"
			android:visibility="gone"
			/>

		<TextView
			android:id="@+id/tv_unjoin_circle_tag2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dp_2"
			android:background="@drawable/stroll_type_three"
			android:gravity="center"
			android:text="运动"
			android:textColor="#FFFFFF"
			android:textSize="10sp"
			android:visibility="gone"
			/>

		<TextView
			android:id="@+id/tv_unjoin_circle_tag3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dp_2"
			android:background="@drawable/stroll_type_three"
			android:gravity="center"
			android:text="旅行"
			android:textColor="#FFFFFF"
			android:textSize="10sp"
			android:visibility="gone"
			/>

	</LinearLayout>


	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="@dimen/dp_18"
		android:layout_marginRight="@dimen/dp_18"
		android:layout_marginTop="17dp"
		android:background="@drawable/create_circle_edit_bg"
		android:orientation="vertical"
		android:padding="@dimen/dp_6">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="圈子介绍"
			android:textColor="#323232"
			android:textSize="14sp"

			/>

		<TextView
			android:id="@+id/tv_unjoin_circle_summary"
			android:layout_width="321dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/dp_10"
			android:layout_marginTop="5dp"
			android:text="群员有自愿加入的权利，管理员有随意踢人的义务，比如管理员发飙，抽风或脚痒的时候不得在群内骂人斗嘴等具有人身攻击性质行为，可私下单挑解决。如被暴打请拨打110或向管理员求助，但管理员不负责替你出头。"
			android:textColor="#909090"
			android:textSize="12sp"
			/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/llayout_unjoin_circle_join"
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:layout_below="@+id/linearLayout2"
		android:layout_marginLeft="@dimen/dp_18"
		android:layout_marginRight="@dimen/dp_18"
		android:layout_marginTop="15dp"
		android:background="@drawable/join_circle_bg"
		android:clickable="true"
		android:gravity="center">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			android:src="@mipmap/circle_details_join"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="加入圈子"
			android:textColor="#FFFFFF"
			android:textSize="12sp"
			/>
	</LinearLayout>

</RelativeLayout>
