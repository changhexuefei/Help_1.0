<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="100dp"
	android:layout_height="35dp"

	>

<LinearLayout
	android:layout_alignParentBottom="true"
              android:layout_width="100dp"
              android:layout_height="35dp"
              android:background="@drawable/circle_type_five"
              android:gravity="center"
              android:orientation="horizontal"
              android:id="@+id/llayout_circle_type"

	>

	<TextView
		android:id="@+id/tv_circle_type_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:ems="1"
		android:gravity="center"
		android:paddingLeft="@dimen/dp_5"
		android:paddingRight="@dimen/dp_5"
		android:text="美\n食"
		android:textSize="@dimen/sp_12"
		/>

	<View
		android:layout_width="@dimen/dp_1"
		android:layout_height="35dp"
		android:background="@color/color_ff"></View>

	<ImageView
		android:id="@+id/im_circle_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="2"
		android:src="@mipmap/circle_fitness"
		/>


</LinearLayout>
	<ImageView
		android:visibility="gone"
		android:id="@+id/im_circle_select"
		android:layout_marginRight="@dimen/dp_2"
		android:layout_marginTop="@dimen/dp_2"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/select_btn"/>
</RelativeLayout>