<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_88"
	>

	<de.hdodenhof.circleimageview.CircleImageView

		android:id="@+id/im_Stroll_list_icon"
		android:layout_width="@dimen/dp_60"
		android:layout_height="@dimen/dp_60"
		android:layout_marginLeft="@dimen/dp_16"
		android:layout_marginTop="6dp"
		android:src="@mipmap/cc"
		android:layout_marginBottom="10dp"/>

	<TextView
		android:id="@+id/tv_stroll_list_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		android:layout_toRightOf="@id/im_Stroll_list_icon"
		android:text="运动圈"
		android:textColor="@color/colorDarkgray"
		android:textSize="@dimen/sp_12"
	    android:layout_marginLeft="@dimen/dp_6"
		/>




	<TextView
		android:id="@+id/tv_stroll_list_typeone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_stroll_list_title"
		android:layout_marginLeft="@dimen/dp_6"
		android:layout_marginTop="@dimen/dp_18"
		android:layout_toRightOf="@id/im_Stroll_list_icon"
		android:background="@drawable/stroll_type_one"
		android:gravity="center"
		android:text="游玩"
		android:textColor="@color/color_ff"
		android:textSize="@dimen/sp_11"
		android:visibility="gone"/>
	<TextView
		android:id="@+id/tv_stroll_list_typetwo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_stroll_list_title"
		android:layout_marginLeft="@dimen/dp_4"
		android:layout_marginTop="@dimen/dp_18"
		android:layout_toRightOf="@id/tv_stroll_list_typeone"
		android:background="@drawable/stroll_type_two"
		android:gravity="center"
		android:text="美食"
		android:textColor="@color/color_ff"
		android:visibility="gone"

		android:textSize="@dimen/sp_11"/>
	<TextView
		android:id="@+id/tv_stroll_list_typethree"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_stroll_list_title"
		android:layout_marginLeft="@dimen/dp_4"
		android:layout_marginTop="@dimen/dp_18"
		android:layout_toRightOf="@id/tv_stroll_list_typetwo"
		android:background="@drawable/stroll_type_three"
		android:gravity="center"
		android:text="游戏"
		android:visibility="gone"
		android:textColor="@color/color_ff"
		android:textSize="@dimen/sp_11"/>

	<TextView
		android:id="@+id/tv_stroll_list_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_12"
		android:textSize="@dimen/sp_12"
		android:textColor="#909090"

		android:text="3125人"
		/>

	<TextView
		android:id="@+id/tv_stroll_list_topic"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/tv_stroll_list_num"
		android:layout_marginLeft="@dimen/dp_4"
		android:layout_marginRight="@dimen/dp_16"
		android:layout_marginTop="@dimen/dp_18"
		android:text="128条话题"
		android:textColor="#909090"
		android:textSize="@dimen/sp_12"

		/>


</RelativeLayout>
