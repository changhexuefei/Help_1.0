<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/talker"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1ccc9b">

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/ic_return"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发表说说"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f5f5f5"/>


    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="点击输入标题栏"
        android:padding="10dp"
        android:textColor="#989898"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#f5f5f5"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:hint="点击输入您的内容"
        android:maxLines="100"
        android:padding="10dp"
        android:textColor="#989898"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#f5f5f5"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:enabled="true"
            android:layout_gravity="end|bottom"
            android:id="@+id/add_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:drawableTop="@mipmap/addicon"
            android:text="此处最多上传3张图片"
            android:textColor="#989898"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/icon_gridView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="10dp">
        </android.support.v7.widget.RecyclerView>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cbx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="同步到小区状态"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_release"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:background="#1ccd9a"
            android:text="发布"
            android:textColor="#f5f5f5"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
