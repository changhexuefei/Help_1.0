<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
	
	<TextView
		android:id="@+id/zhong"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_centerInParent="true"
		android:background="@color/colorPrimary"
		android:gravity="center"
		android:text="登录"
		android:textColor="#FFFFFF"
		android:textSize="16sp"/>

	<LinearLayout
		android:id="@+id/re1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginTop="17dp"
		android:background="@color/white">

		<ImageView
			android:id="@+id/img"
			android:layout_width="15dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="22dp"
			android:src="@drawable/login_phone"/>

		<EditText
			android:id="@+id/et_login_phone"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_toRightOf="@id/img"
			android:background="@null"
			android:gravity="center|left"
			android:hint="手机号"
			android:inputType="phone"
			android:lines="1"
			android:maxLength="11"
			android:singleLine="true"
			android:textColor="#000"
			android:textColorHint="#999"/>
	</LinearLayout>

	<View
		android:id="@+id/view_login_line2"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_below="@id/re1"
		android:background="#eeeeee"/>

	<LinearLayout
		android:id="@+id/re2"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_below="@id/view_login_line2"
		android:background="@color/white">

		<ImageView
			android:id="@+id/img2"
			android:layout_width="18dp"
			android:layout_height="22dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="21dp"
			android:src="@drawable/login_lock"/>

		<EditText
			android:id="@+id/et_login_pass"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_toRightOf="@id/img"
			android:layout_weight="1"
			android:background="@null"
			android:gravity="center|left"
			android:hint="密码"
			android:inputType="textPassword"
			android:lines="1"
			android:maxEms="4"
			android:maxLength="16"
			android:singleLine="true"
			android:textColor="#000"
			android:textColorHint="#999"/>
	</LinearLayout>

	<Button
		android:id="@+id/btn_login"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_below="@id/re2"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="30dp"
		android:background="#12CC8E"
		android:gravity="center"
		android:text="登录"
		android:textColor="#FFF"
		android:textSize="18sp"/>

	<Space
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tv_login_reset"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginBottom="20dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:gravity="left"
			android:text="忘记密码?"
			android:textColor="#1ccd9b"
			android:textSize="14sp"/>

		<TextView
			android:id="@+id/tv_login_register"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginBottom="20dp"
			android:layout_marginRight="10dp"
			android:layout_weight="1"
			android:gravity="right"
			android:text="新用户注册"
			android:textColor="#1ccd9b"
			android:textSize="14sp"/>
	</LinearLayout>
</LinearLayout>