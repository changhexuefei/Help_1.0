<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/neighbor_icon"/>

    <TextView
        android:textSize="16sp"
        android:text="某某某"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="18dp"
        android:id="@+id/neighbor_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/neighbor_icon"
        android:layout_toEndOf="@+id/neighbor_icon"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/neighbor_icon"
        android:layout_toRightOf="@+id/neighbor_icon"
        android:layout_toEndOf="@+id/neighbor_icon"
        android:id="@+id/neighbor_sex_icon"/>

    <TextView
        android:textSize="12sp"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/neighbor_sex_icon"
        android:layout_toRightOf="@+id/neighbor_sex_icon"
        android:layout_toEndOf="@+id/neighbor_sex_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"

        android:id="@+id/neighbor_age"/>


</RelativeLayout>