<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="140dp">

    <ImageView
        android:id="@+id/im2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_user_order"/>

    <TextView
        android:id="@+id/tv_user_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:text="等待收货"
        android:textColor="#FF0000"
        android:textSize="@dimen/sp_10"
        />

    <TextView
        android:id="@+id/bt2_user_order"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im2"
        android:layout_alignEnd="@+id/tv_user_order_state"
        android:layout_alignRight="@+id/tv_user_order_state"
        android:layout_marginBottom="@dimen/dp_1"
        android:background="@drawable/order_state2"
        android:padding="@dimen/dp_5"
        android:gravity="center"
        android:text="查看物流"/>

    <TextView
        android:id="@+id/bt1_user_order"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im2"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/bt2_user_order"
        android:layout_toStartOf="@+id/bt2_user_order"
        android:background="@drawable/order_state1"
        android:visibility="gone"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="查看物流"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/im2"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#dbdbdb"></View>
</RelativeLayout>
