<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
	    android:background="#ebebeb"></View>
<de.hdodenhof.circleimageview.CircleImageView
	android:id="@+id/im_member_host_headportraid"
	android:layout_width="41dp"
	android:layout_height="41dp"
	android:src="@mipmap/cc"
	android:layout_marginLeft="@dimen/dp_24"
	android:layout_marginTop="@dimen/dp_15"
	android:layout_marginBottom="@dimen/dp_12"/>
	<TextView
		android:id="@+id/tv_member_host_nickname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="张春燕"
		android:textSize="12sp"
		android:layout_marginLeft="14dp"
		android:layout_marginTop="20dp"
		android:layout_toRightOf="@id/im_member_host_headportraid"/>
	<ImageView
		android:id="@+id/im_member_host_gender"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/man"
		android:layout_marginLeft="14dp"
		android:layout_marginTop="10dp"
		android:layout_toRightOf="@id/im_member_host_headportraid"
		android:layout_below="@id/tv_member_host_nickname"
		android:layout_marginBottom="@dimen/dp_12"/>
	<TextView
		android:text="19"
		android:textSize="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="12dp"
		android:layout_toRightOf="@id/im_member_host_gender"
		android:layout_below="@id/tv_member_host_nickname"
		android:layout_marginBottom="@dimen/dp_12"/>
	<TextView
		android:id="@+id/tv_member_host_agree"
		android:layout_width="48dp"
		android:layout_height="25dp"
		android:layout_alignParentRight="true"
		android:text="同意"
		android:textSize="@dimen/sp_12"
		android:layout_marginTop="@dimen/dp_20"
		android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
		android:background="@drawable/btn_member_agree"
		android:textColor="#1ccd9a"
		/>

	<TextView
		android:id="@+id/tv_member_host_unagree"
		android:layout_width="48dp"
		android:layout_height="25dp"
		android:text="拒绝"
		android:background="@drawable/btn_member_unagree"
		android:textColor="#e1413e"
		android:textSize="@dimen/sp_12"
		android:gravity="center"
		android:layout_marginTop="@dimen/dp_20"
		android:layout_marginRight="@dimen/dp_16"
		android:layout_toLeftOf="@+id/tv_member_host_agree"
		/>
</RelativeLayout>

