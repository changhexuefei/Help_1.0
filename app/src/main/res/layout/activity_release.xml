<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_release"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyzsnt.onekeyhelp.module.index.activity.ReleaseActivity">

    <LinearLayout
        android:id="@+id/release"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1ccc9b"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/house_lease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/release"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/houselease"
        android:text="房屋出租"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/eave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/house_lease"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/eave"
        android:text="家中闲置"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/casual_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eave"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/casual_comment"
        android:text="随便说说"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/casual_comment"
        android:layout_marginTop="38dp"
        android:background="#cfcfcf"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="#1ccd9a"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</RelativeLayout>
