<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_18"
              android:layout_marginRight="@dimen/dp_18"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seek_curcum_headportrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="兴隆小区"
                android:textColor="#444444"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/community_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="1389人"
                android:textColor="#444444"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#F1F1F1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="小区简介"
            android:textColor="@color/blackGray"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="@dimen/dp_18"
            android:src="@drawable/home_jianjie"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="#F1F1F1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="热门圈子"
        android:textColor="@color/blackGray"
        android:textSize="@dimen/sp_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_62"
            >

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62"
                android:scaleType="fitXY"
                android:src="@drawable/img"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentBottom="true"
                android:background="@color/lucencyBlack"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@string/home_life_circle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp_5"
                    android:text="178人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_62"
            android:layout_marginLeft="@dimen/dp_10"
            >

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62"
                android:scaleType="fitXY"
                android:src="@drawable/img"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentBottom="true"
                android:background="@color/lucencyBlack"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@string/home_life_circle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp_5"
                    android:text="178人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_62"
            android:layout_marginLeft="@dimen/dp_10"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/img"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentBottom="true"
                android:background="@color/lucencyBlack"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@string/home_life_circle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp_5"
                    android:text="178人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
