<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_province_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.hyzsnt.onekeyhelp.module.index.activity.ProvinceListActivity">

    <FrameLayout
        android:id="@+id/action0"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1ccc9b">

        <ImageButton
            android:id="@+id/btn_return"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:src="@mipmap/ic_return"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="选择省"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/action0"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/search_estate_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/search_box_shape"
            android:gravity="center"
            android:hint="请输入你想搜索的小区"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="30dp"
            android:src="@mipmap/search_icon"/>
    </RelativeLayout>



    <!--用来显示中国省份和城市名的ListView-->

    <ListView
        android:id="@+id/province_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/classify"
        android:layout_marginTop="5dp">

    </ListView>



</LinearLayout>
