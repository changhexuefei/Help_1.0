<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#FFF"
                  android:orientation="vertical"
                  android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/search_community_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/search_community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兴隆小区"
                    android:textColor="#444444"
                    android:textSize="@dimen/sp_12"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <TextView
                    android:id="@+id/search_community_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1389人"
                    android:textColor="#444444"
                    android:textSize="@dimen/sp_10"/>
            </LinearLayout>

            <Button
                android:id="@+id/search_community_join"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#1CCD9B"
                android:text="加入"
                android:textSize="@dimen/dp_10"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/search_community_abs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/home_jianjie"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="小区简介"
            android:textColor="@color/blackGray"
            android:textSize="@dimen/sp_12"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1"/>

        <TextView
            android:id="@+id/search_community_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="热门圈子"
            android:textColor="@color/blackGray"
            android:textSize="@dimen/sp_12"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <RelativeLayout
                android:id="@+id/rl0"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62">

                <ImageView
                    android:id="@+id/search_community_circle1_bac"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_62"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lucencyBlack"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_community_circle1_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/home_life_circle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/search_community_circle1_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_5"
                        android:text="178人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/search_community_circle2_bac"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_62"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lucencyBlack"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_community_circle2_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/home_life_circle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/search_community_circle2_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_5"
                        android:text="178人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_62"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/search_community_circle3_bac"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_62"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lucencyBlack"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_community_circle3_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/home_life_circle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/search_community_circle3_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_5"
                        android:text="178人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
</LinearLayout>
