<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="65dp">

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#ebebeb"></View>
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/im_member_host_headportraid"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:src="@mipmap/cc"
			android:layout_marginLeft="@dimen/dp_24"
			android:layout_marginTop="@dimen/dp_15"
			android:layout_marginBottom="@dimen/dp_12"/>
		<TextView
			android:id="@+id/tv_member_host_nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="张春燕"
			android:textSize="12sp"
			android:layout_marginLeft="14dp"
			android:layout_marginTop="20dp"
			android:layout_toRightOf="@id/im_member_host_headportraid"/>
		<ImageView
			android:id="@+id/im_member_host_gender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/man"
			android:layout_marginLeft="14dp"
			android:layout_marginTop="6dp"
			android:layout_toRightOf="@id/im_member_host_headportraid"
			android:layout_below="@id/tv_member_host_nickname"
			/>
		<TextView
			android:id="@+id/tv_member_host_age"
			android:text="19"
			android:textSize="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="8dp"
			android:layout_toRightOf="@id/im_member_host_gender"
			android:layout_below="@id/tv_member_host_nickname"
			/>
	<ImageView
		android:id="@+id/im_member_tag_one"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/tag_baby"
		android:layout_marginTop="@dimen/dp_24"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/dp_6"/>
	<ImageView
		android:id="@+id/im_member_tag_two"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/tag_baby"
		android:layout_marginTop="@dimen/dp_24"

		android:layout_toLeftOf="@id/im_member_tag_one"
		android:layout_marginRight="@dimen/dp_6"/>
	<ImageView
		android:id="@+id/im_member_tag_three"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/tag_baby"
		android:layout_toLeftOf="@id/im_member_tag_two"
		android:layout_marginTop="@dimen/dp_24"

		android:layout_marginRight="@dimen/dp_6"/>


</RelativeLayout>
