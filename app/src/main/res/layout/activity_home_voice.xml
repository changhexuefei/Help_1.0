<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="#1CCD9A"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/voice_goback"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/home_goback"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/home_image_location"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="语音详情"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/homeimage_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/home_transpond"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_voice_rlv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
