<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:background="@color/white">

		<ImageView
			android:id="@+id/fanhui"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:padding="13dp"
			android:src="@drawable/back"/>

		<TextView
			android:id="@+id/zhong"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="注册"
			android:textSize="16sp"/>
	</RelativeLayout>

	<LinearLayout
		android:id="@+id/re1"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginTop="17dp"
		android:background="@color/white">

		<ImageView
			android:id="@+id/img"
			android:layout_width="15dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="22dp"
			android:src="@drawable/login_phone"/>

		<EditText
			android:id="@+id/uname_edittext"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_toRightOf="@id/img"
			android:background="@null"
			android:gravity="center|left"
			android:hint="手机号"
			android:inputType="phone"
			android:lines="1"
			android:maxEms="11"
			android:singleLine="true"
			android:textColor="#000"
			android:textColorHint="#999"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="#eeeeee"/>

	<LinearLayout
		android:id="@+id/re2"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/white">

		<ImageView
			android:id="@+id/img2"
			android:layout_width="18dp"
			android:layout_height="22dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="21dp"
			android:src="@drawable/login_lock"/>

		<EditText
			android:id="@+id/pwd_edittext"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="30dp"
			android:layout_toRightOf="@id/img"
			android:layout_weight="1"
			android:background="@null"
			android:gravity="center|left"
			android:hint="验证码"
			android:inputType="phone"
			android:lines="1"
			android:maxEms="4"
			android:singleLine="true"
			android:textColor="#000"
			android:textColorHint="#999"/>

		<TextView
			android:id="@+id/get_code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="15dp"
			android:background="#12CC8E"
			android:ems="5"
			android:gravity="center"
			android:paddingBottom="5dp"
			android:paddingLeft="3dp"
			android:paddingRight="3dp"
			android:paddingTop="5dp"
			android:text="获取验证码"
			android:textColor="@color/white"
			android:textSize="12sp"/>
	</LinearLayout>

	<Button
		android:id="@+id/sub_login"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_below="@id/zhong"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="30dp"
		android:background="#12CC8E"
		android:gravity="center"
		android:text="注册"
		android:textColor="#FFF"
		android:textSize="18sp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/sub_login"
		android:layout_marginTop="22dp"
		android:gravity="center">

		<TextView
			android:id="@+id/text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="登录即代表您已同意 《一键帮助用户协议》 "
			android:textColor="#1ccd9b"
			android:textSize="12sp"/>
	</LinearLayout>

</LinearLayout>