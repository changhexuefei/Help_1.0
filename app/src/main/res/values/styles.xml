<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:listDivider">@drawable/divider</item>
	</style>

	<style name="main_bottom_style">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:button">@null</item>
		<item name="android:background">@null</item>
		<item name="android:drawablePadding">4dp</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:textColor">@drawable/main_bottom_text_color_selector</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="user_item">
		<item name="android:background">@drawable/setting_item</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">25dp</item>
		<item name="android:textColor">#666666</item>
	</style>

	<style name="user_item_group">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">110dp</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="et_add_contacts">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:background">#fff</item>
		<item name="android:drawablePadding">15dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:maxLength">11</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:textColor">#000</item>
		<item name="android:textColorHint">#999</item>
		<item name="android:textSize">13sp</item>
	</style>

	<!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
	<style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<style name="rb_money_check">
		<item name="android:layout_width">108dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:background">@drawable/money_checked_selector</item>
		<item name="android:button">@null</item>
		<item name="android:textColor">@drawable/money_checked_selector_color</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="rg_money">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="rb_pay_type">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">56dp</item>
		<item name="android:background">#FFFFFF</item>
		<item name="android:button">@null</item>
		<item name="android:drawablePadding">8dp</item>
		<item name="android:drawableRight">@drawable/checked_type_selector</item>
		<item name="android:padding">15dp</item>
		<item name="android:textColor">#333333</item>
		<item name="android:textSize">16sp</item>
	</style>
	<style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
		<item name="tabIndicatorColor">#1CCD9A</item>
	</style>

</resources>
